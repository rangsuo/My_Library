<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mylibrary">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".WebViewActivity"></activity>
        <activity android:name=".Favourites"
            android:label="@string/Activity_favourite_books"/>
        <activity android:name=".CurrentlyReading"
            android:label="@string/activity_currently_reading"/>
        <activity android:name=".Wishlist"
            android:label="@string/activity_want_to_read"/>
        <activity android:name=".AlreadyReadActivity"
            android:label="@string/activity_already_read"/>
        <activity android:name=".BookActivity"
            android:label="@string/activity_book"/>
        <activity android:name=".AllBooksActivity"
            android:label="@string/activity_all_books"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>